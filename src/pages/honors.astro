---
import MainLayout from '../layouts/MainLayout.astro';
import { honors } from '../data/honors';
import logo from '../assets/logo.svg';

// Sort by date
const sortedHonors = [...honors].sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<MainLayout title="Hall of Fame">
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <span class="text-secondary-light dark:text-secondary-dark font-mono mb-2 block">Our Achievements</span>
        <h1 class="text-4xl font-bold text-light-light dark:text-light-dark mb-4">Hall of Fame</h1>
        <p class="text-light-light/70 dark:text-light-dark/70 max-w-2xl mx-auto">
          This page showcases the honors and achievements of the N0wayBack team in various CTF competitions, witnessing our efforts and growth along the way.
        </p>
      </div>
      
      <div class="space-y-12">
        {sortedHonors.map((honor, index) => (
          <div class={`flex flex-col lg:flex-row gap-8 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
            <div class="lg:w-1/3">
              <div class="relative overflow-hidden rounded-lg border border-secondary-light/30 dark:border-secondary-dark/30 h-64 group">
                <div class="absolute inset-0 bg-gradient-to-t from-dark-light dark:from-dark-dark to-transparent z-10"></div>
                {honor.image ? (
                  <img 
                    src={honor.image} 
                    alt={`${honor.name} honor image`} 
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  />
                ) : (
                  <div class="w-full h-full bg-secondary-light/10 dark:bg-secondary-dark/10 flex items-center justify-center">
                    <img 
                      src={logo.src} 
                      alt="N0wayBack logo" 
                      class="h-16"
                    />
                  </div>
                )}
                <div class="absolute bottom-4 left-4 z-20 bg-dark-light/80 dark:bg-dark-dark/80 backdrop-blur-sm px-3 py-1 rounded-md border border-secondary-light/30 dark:border-secondary-dark/30">
                  <span class="text-secondary-light dark:text-secondary-dark font-mono text-sm">{honor.rank}</span>
                </div>
              </div>
            </div>
            
            <div class="lg:w-2/3">
              <div class="space-y-4">
                <div class="flex items-start justify-between">
                  <h2 class="text-2xl md:text-3xl font-bold text-light-light dark:text-light-dark">{honor.name}</h2>
                  <div class="flex items-center gap-2 rounded-full px-4 py-1 bg-secondary-light/10 dark:bg-secondary-dark/10 text-secondary-light dark:text-secondary-dark">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span class="text-sm font-medium">{new Date(honor.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long' })}</span>
                  </div>
                </div>
                
                <p class="text-light-light/70 dark:text-light-dark/70">{honor.description}</p>
                
                {honor.challenges && (
                  <div>
                    <h3 class="text-xl font-bold text-light-light dark:text-light-dark mb-2">Key Challenges Solved</h3>
                    <div class="flex flex-wrap gap-2">
                      {honor.challenges.map((challenge) => (
                        <span class="px-3 py-1 bg-secondary-light/10 dark:bg-secondary-dark/10 text-secondary-light dark:text-secondary-dark text-sm rounded-full">{challenge}</span>
                      ))}
                    </div>
                  </div>
                )}
                
                {honor.ctftime && (
                  <a 
                    href={honor.ctftime} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="inline-flex items-center text-secondary-light dark:text-secondary-dark hover:underline mt-2"
                  >
                    View on CTFtime
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Goals Section -->
  <section class="py-16 bg-dark-light dark:bg-dark-dark">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <span class="text-secondary-light dark:text-secondary-dark font-mono mb-2 block">Looking Forward</span>
        <h2 class="text-3xl font-bold text-light-light dark:text-light-dark">Our Goals</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-primary-light dark:bg-primary-dark p-6 rounded-lg border border-secondary-light/20 dark:border-secondary-dark/20 hover:border-secondary-light dark:hover:border-secondary-dark transition-all duration-300">
          <div class="w-12 h-12 flex items-center justify-center bg-secondary-light/10 dark:bg-secondary-dark/10 rounded-md text-secondary-light dark:text-secondary-dark mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-light-light dark:text-light-dark mb-2">Top 10 Global Ranking</h3>
          <p class="text-light-light/70 dark:text-light-dark/70">
            We aim to establish ourselves as one of the top 10 CTF teams globally, consistently performing at the highest level in international competitions.
          </p>
        </div>
        
        <div class="bg-primary-light dark:bg-primary-dark p-6 rounded-lg border border-secondary-light/20 dark:border-secondary-dark/20 hover:border-secondary-light dark:hover:border-secondary-dark transition-all duration-300">
          <div class="w-12 h-12 flex items-center justify-center bg-secondary-light/10 dark:bg-secondary-dark/10 rounded-md text-secondary-light dark:text-secondary-dark mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-light-light dark:text-light-dark mb-2">Research Publications</h3>
          <p class="text-light-light/70 dark:text-light-dark/70">
            Contribute to the cybersecurity community by publishing original research, tools, and techniques discovered during our CTF journey.
          </p>
        </div>
        
        <div class="bg-primary-light dark:bg-primary-dark p-6 rounded-lg border border-secondary-light/20 dark:border-secondary-dark/20 hover:border-secondary-light dark:hover:border-secondary-dark transition-all duration-300">
          <div class="w-12 h-12 flex items-center justify-center bg-secondary-light/10 dark:bg-secondary-dark/10 rounded-md text-secondary-light dark:text-secondary-dark mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-light-light dark:text-light-dark mb-2">Mentorship Program</h3>
          <p class="text-light-light/70 dark:text-light-dark/70">
            Develop a structured mentorship program to nurture new talent and help build the next generation of cybersecurity professionals.
          </p>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
